header.header
    .container
        .header__btn
            +button("btn-select-theme")
            +button("btn-close")
        h1.header__title Try Verv for free
        .header__nav-wrapper
            +navMenu("header__nav", "nav-list", "nav-list__item", "link-item")
            .block-lines
                .line.top
                .line.bottom
                .block-free
                    img(class="cloud" src="./images/cloud.png" alt="")
                    img(class="cloud-text" src="./images/Free.svg" alt="")
                    img(class="dot" src="./images/red dot.png" alt="")
                .block-pro
                    img(class="cloud" src="./images/cloud.png" alt="")
                    img(class="cloud-text" src="./images/PRO.svg" alt="")
                    img(class="dot" src="./images/green dot.png" alt="")
        .header__block-woman
            img(src="./images/woman.svg" class="woman-img" alt="")