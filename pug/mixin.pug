-let headerNav = ["Extr. Obese", "Obese", "Overweight", "Healthy"];
-let maxNumberOfStars = [1, 2, 3, 4, 5];

mixin button(className, text)
    button(class=`${className}`) #{text}

mixin numberOfStars(stars)
    each value  in maxNumberOfStars 
        if value <= stars
            img(class="star" src="./images/Star.svg" alt="")

mixin navMenu(classNameNav, classNameUl, classNameLi, classNameA)
    nav(class=`${classNameNav}`) 
        ul(class=`${classNameUl}`)
            each value in headerNav
                li(class=`${classNameLi}`)
                    a(class=`${classNameA}` href="#") #{value}
        .block-lines
            .line.top
            .line.bottom
            .block-free
                img(class="cloud" src="./images/cloud.png" alt="")
                img(class="cloud-text" src="./images/Free.svg" alt="")
                img(class="dot" src="./images/red dot.png" alt="")
            .block-pro
                img(class="cloud" src="./images/cloud.png" alt="")
                img(class="dot" src="./images/green dot.png" alt="")
                img(class="cloud-text" src="./images/PRO.svg" alt="")